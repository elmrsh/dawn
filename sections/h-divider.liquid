<section style="display: block; padding: {{ section.settings.spacing-t }}px 0 {{ section.settings.spacing-b }}px;">
  {% if section.settings.enable-line %}
  <div
    {% unless section.settings.full-width  %}class="page-width"{% endunless %}
    style="display: block; border-bottom: 1px solid {{ section.settings.line-color }}"
  ></div>
  {% endif %}
</section>
{% schema %}
{
  "name": "H - Divider",
  "settings": [
    {
      "type": "range",
      "id": "spacing-t",
      "label": "Top Spacing",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "spacing-b",
      "label": "Bottom Spacing",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "checkbox",
      "id": "enable-line",
      "label": "Enable line"
    },
    {
      "type": "color",
      "id": "line-color",
      "label": "Line color",
      "default": "#ccc"
    },
    {
      "type": "checkbox",
      "id": "full-width",
      "label": "Full width line"
    }
  ],
  "presets": [
    {"name": "H - Divider"}
  ]
}
{% endschema %}