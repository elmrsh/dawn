{% style %}
.fig__desktop {
  display: none;
}
.fig__mobile {
  display: block;
}
.fig__wrapper-mobile {
  display: none;
}
@media screen and (max-width: 500px){
  .fig__wrapper {
    display: none !important;
  }

  .fig__wrapper-mobile {
    display: block;
  }

}

.fig__wrapper-mobile .fig__info-container {
  height: 90%;
}

  .fig__wrapper-mobile .fig__info-container .fig__card--information {
    display: flex;
      flex-direction: column;
      gap: 8px;
  }
  .fig__wrapper-mobile .fig__info-container .fig__card--information .fig__card--heading{
    color: #ffffff;
    font-size: 1.5em;
    margin: 0;
  }
  .fig__wrapper-mobile .fig__info-container .fig__card--information.bottom.left{
    align-items: center;
  }
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .fig__desktop {
      display: block;
    }
    .fig__mobile {
      display: none;
    }
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  .fig__id-{{ section.id }} {
    background-color: {{ section.settings.background_color }};
  }
  .fig__wrapper figure {
    margin: 0;
    padding: 0;
  }

  .fig__wrapper .fig--img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform .5s ease;

  }

  .fig__item {
    cursor: pointer;
    overflow: hidden;
    position: relative;
    border-radius: {{ section.settings.mobile_border_radius | append: 'px' }};
    overflow: hidden;
  }

  @media screen and (min-width: 750px) {
    .fig__item {
      border-radius: {{ section.settings.border_radius | append: 'px' }};
    }
  }

  .fig__item:hover img {
    transform: scale(1.04);
  }


  .fig__info-container {
    position: absolute;
    padding: 10px;
    display: flex !important;
    height: 100%;
    width: 100%;
    z-index: 99;
    top: 0;
  }

  .fig__info-container.bottom.center {
    justify-content: center;
    align-items: flex-end;
  }
  .fig__card--information.bottom.center {
    justify-content: flex-end;
    align-items: center;
  }

  .fig__info-container.bottom.left{
    justify-content: flex-start;
    align-items: flex-end;
  }
  .fig__card--information.bottom.left {
    justify-content: flex-end;
    align-items: flex-start;
  }

  .fig__info-container.bottom.right
  .fig__card--information.bottom.right {
    justify-content: flex-end;
    align-items: flex-end;
  }
  .fig__info-container.top.center {
    justify-content: center;
    align-items: flex-start;
  }
  .fig__card--information.top.center {
    justify-content: flex-start;
    align-items: center;
  }

  .fig__info-container.top.left,
  .fig__card--information.top.left {
    justify-content: flex-start;
    align-items: flex-start;
  }

  .fig__info-container.top.right {
    justify-content: flex-end;
    align-items: flex-start;
  }
  .fig__card--information.top.right {
    justify-content: flex-start;
    align-items: flex-end;
  }

  .fig__info-container.center,
  .fig__card--information.center {
    justify-content: center;
    align-items: center;
  }

  .fig__wrapper-overlay {
    display: block !important;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 9;
  }
  .fig__wrapper {
    display: grid;
    gap: {{ section.settings.mobile_gap | append: 'px' }};
  }
  @media only screen and (min-width: 750px) {
    .fig__wrapper {
      gap: {{ section.settings.gap | append: 'px' }};
    }
  }
  {% case section.settings.grid_theme %}
    {% when 'grid' %}
      .fig__id-{{ section.id }} .theme-{{ section.settings.grid_theme }} {
        grid-auto-rows: 1fr; 
        grid-template-columns: repeat(3, 1fr); 
        grid-template-rows: repeat(3, 1fr);
      }
    {% when 'masonry' %}
      .fig__id-{{ section.id }} .theme-{{ section.settings.grid_theme }} {
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        grid-template-rows: repeat(auto-fill, minmax(250px, 1fr));
        grid-gap: {{ section.settings.gap | append: 'px' }};
      }

      .fig__wrapper.theme-{{ section.settings.grid_theme }} > div {
        display: flex;
        justify-content: center;
        align-items: center;
      }
      .fig__wrapper.theme-{{ section.settings.grid_theme }} > div > img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }

      .fig__wrapper.theme-{{ section.settings.grid_theme }} {
        display: grid;
        grid-gap: 10px;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        grid-auto-rows: 200px;
        grid-auto-flow: dense;
      }
      .fig__wrapper.theme-{{ section.settings.grid_theme }} .wide {
        grid-column: span 2;
      }
      .fig__wrapper.theme-{{ section.settings.grid_theme }} .tall {
        grid-row: span 2;
      }
      .fig__wrapper.theme-{{ section.settings.grid_theme }} .big {
        grid-column: span 2;
        grid-row: span 2;
      }
      .fig__wrapper.theme-{{ section.settings.grid_theme }} .huge {
        grid-column: span 4;
        grid-row: span 4;
      }
    {% when 'banner-left' %}
      .fig__wrapper.theme-{{ section.settings.grid_theme }} {
        grid-auto-rows: 1fr;
        grid-template-columns: repeat(4, 1fr);
        grid-template-rows: repeat(2, 1fr);
      }
      .fig__wrapper.theme-{{ section.settings.grid_theme }} .banner {
        grid-area: 1 / 1 / 3 / 3;
      }
    {% when 'banner-right' %}
      .fig__wrapper.theme-{{ section.settings.grid_theme }} {
        grid-auto-rows: 1fr;
        grid-template-columns: repeat(4, 1fr);
        grid-template-rows: repeat(2, 1fr);
      }
      .fig__wrapper.theme-{{ section.settings.grid_theme }} .banner {
        grid-area: 1 / 3 / 3 / 5;
      }
    {% when 'banner-top' %}
      .fig__wrapper.theme-{{ section.settings.grid_theme }} {
        grid-auto-rows: 1fr;
        grid-template-columns: repeat(4, 1fr);
        grid-template-rows: repeat(2, 1fr);
      }
      .fig__wrapper.theme-{{ section.settings.grid_theme }} .banner {
        grid-area: 1 / 1 / 2 / 5;
      }
    {% when 'banner-bottom' %}
      .fig__wrapper.theme-{{ section.settings.grid_theme }} {
        grid-auto-rows: 1fr;
        grid-template-columns: repeat(4, 1fr);
        grid-template-rows: repeat(2, 1fr);
      }
      .fig__wrapper.theme-{{ section.settings.grid_theme }} .banner {
        grid-area: 2 / 1 / 3 / 5;
      }
    {% when 'banner-center' %}
      .fig__wrapper.theme-{{ section.settings.grid_theme }} {
        grid-auto-rows: 1fr;
        grid-template-columns: repeat(4, 1fr);
        grid-template-rows: repeat(2, 1fr);
      }
      .fig__wrapper.theme-{{ section.settings.grid_theme }} .banner {
        grid-area: 1 / 2 / 3 / 4;
      }

  {% endcase %}

  @media screen and (max-width: 768px) {
    .fig__wrapper {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: {{ section.settings.gap | append: 'px' }};
    }

    {% for block in section.blocks %}
      .fig__wrapper .item--{{ forloop.index }}  {
        width: calc({{ block.settings.column_width }} - 15px);
      } 
    {% endfor %}

    .fig__info-container {
      justify-content: center !important;
      align-items: flex-end !important;
    }
  }
  .text-center {
    text-align: center;
  }

  .fig__title {
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-bottom: 1.5rem;
    align-items: {{ section.settings.text_alignment }};
  }
  .fig__card--information p {
    margin: 0;
  }
  .fig__info-container .button {
    width: fit-content;
  }
  {% for block in section.blocks %}

    .fig__block-{{ block.id }} .fig__card--information {
      display: flex;
      flex-direction: column;
      gap: {{ block.settings.separacion | append: 'px' }};
      justify-content: center;
    }
    .fig__block-{{ block.id }} .fig__card--heading {
      color: {{ block.settings.heading_color }};
      font-size: {{ block.settings.heading_size | append: 'em' }};
      margin: 0;
    }
    .fig__block-{{ block.id }} .fig__card--description {
      color: {{ block.settings.description_color }};
      font-size: {{ block.settings.description_size | append: 'em' }};
    }
  {% endfor %}
  #fig__swiper {
    overflow: hidden;
    --swiper-theme-color: #444;
  }

  #fig__swiper img {
    height: 100%;
    width: 100%;
    object-fit: cover;
  }

  #fig__swiper .swiper-button-next,
  #fig__swiper .swiper-button-prev {
    background-color: white;
    height: 50px;
    width: 50px;
    display: flex !important;
    align-items: center;
    justify-content: center;
    border-radius: 100vw;
    --swiper-navigation-size: 20px;
  }

{% endstyle %}
<div class="fig__id-{{ section.id }} isolate">
  <div class="collection section-{{ section.id }}-padding{% if section.settings.full_width %} collection--full-width{% endif %}">
    <div class="fig__title title-wrapper title-wrapper--no-top-margin page-width">
      {%- if section.settings.title != blank -%}
      <h2 class="title {{ section.settings.heading_size }}">{{ section.settings.title | escape }}</h2>
      {%- endif -%}
      {%- if section.settings.description != blank or section.settings.show_description != false -%}
      <div class="fig__description {{ section.settings.description_style }}">{%- if section.settings.show_description
        -%}{{ section.settings.collection.description }}{%- else -%}{{ section.settings.description }}{% endif %}</div>
      {%- endif -%}
    </div>
    <div class="fig__wrapper theme-{{ section.settings.grid_theme }} {% if section.settings.show_mobile_slider == false %} page-width{% endif %} {% if section.settings.full_width == false %} page-width-desktop{% endif %}">
      {% for block in section.blocks %}
        {% assign img = block.settings.image %}
        {% assign mobile_img = block.settings.mobile_img %}
        <div class="fig__item fig__block-{{ block.id }} {% if forloop.index == 1 %}banner {% endif %}item--{{ forloop.index }} {% if section.settings.grid_theme == 'masonry' %}{{ block.settings.size }}{% endif %}">
          {% if block.settings.link != blank %}<a class="fig__wrapper-overlay" target="_blank" href="{{ block.settings.link }}"></a>{% endif %}
          {% if img != blank %}
            <img class="{% if mobile_img != blank %}fig__desktop {% endif %}fig--img" src="{{ img | image_url }}"
              alt="{{ img.alt }}"
              width="{{ img.width }}"
              height="{{ img.height }}"
              loading="lazy">
            {% if mobile_img != blank %}
              <img class="fig__mobile fig--img" src="{{ mobile_img | image_url }}" alt="{{ mobile_img.alt }}"
              width="{{ mobile_img.width }}" height="{{ mobile_img.height }}" loading="lazy">
            {% endif %}
          {% else %}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          {% endif %}
          {% if block.settings.button_text != blank %}
            <div class="fig__info-container {{ block.settings.button_position }}">
              <div class="fig__card--information {{ block.settings.button_position }}">
                {% if block.settings.heading != blank %}
                  <h3 class="fig__card--heading">{{ block.settings.heading }}</h3>
                {% endif %}
                {% if block.settings.description != blank %}
                  <div class="fig__card--description">{{ block.settings.description }}</div>
                {% endif %}
                
                <a href="{{ block.settings.link }}" class="button button--primary">
                  {{ block.settings.button_text }}
                </a>
              </div>
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>

    <div class="fig__wrapper-mobile page-width">
      <div id="fig__swiper">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
          {% assign img = block.settings.image %}
          {% assign mobile_img = block.settings.mobile_img %}
            <div class="swiper-slide">
            {% if block.settings.link != blank %}<a class="fig__wrapper-overlay" target="_blank" href="{{ block.settings.link }}"></a>{% endif %}
              {% if img != blank %}
                <img 
                src="{{ img | image_url }}" 
                alt=""
                loading="lazy"
                width="{{ img.width }}"
                height="{{ img.height }}"
                class="{% if mobile_img != blank %}fig__desktop {% endif %}fig--img""
                >
                {% if mobile_img != blank %}
                <img class="fig__mobile fig--img" src="{{ mobile_img | image_url }}" alt="{{ mobile_img.alt }}"
                width="{{ mobile_img.width }}" height="{{ mobile_img.height }}" loading="lazy">
                {% endif %}
              {% else %}
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
              {% if block.settings.button_text != blank %}
              <div class="fig__info-container {{ block.settings.button_position }}">
                <div class="fig__card--information {{ block.settings.button_position }}">
                  {% if block.settings.heading != blank %}
                    <h3 class="fig__card--heading">{{ block.settings.heading }}</h3>
                  {% endif %}
                  {% if block.settings.description != blank %}
                    <div class="fig__card--description">{{ block.settings.description }}</div>
                  {% endif %}
                  
                  <a href="{{ block.settings.link }}" class="button button--primary">
                    {{ block.settings.button_text }}
                  </a>
                </div>
              </div>
              {% endif %}
            </div>
          {% endfor %}
        </div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
      </div>
    </div>
  </div>
</div>

<link rel="stylesheet" href="{{ 'swiper.min.css' | asset_url }}" />
<script type="module">
  import Swiper from "{{ 'swiper-bundle.esm.browser.min.js' | asset_url }}"
  const imagesSwiper = new Swiper('#fig__swiper', {
    slidesPerView: 1,
    spaceBetween: 25,
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    },
  })
</script>

